# API Backend Server URL
# Change this to your deployed backend URL from Coolify
VITE_API_URL=https://api.validatecall.com
# For local development, use: http://localhost:3002

# Legacy: These can be removed once frontend is fully migrated to use the API server
# Get your API key from https://vapi.ai
VITE_VAPI_API_KEY=your_vapi_api_key

# Get your phone number ID from your Vapi dashboard
VITE_VAPI_PHONE_NUMBER_ID=your_vapi_phone_number_id

# Supabase - Database
# Get these from https://supabase.com -> Project Settings -> API
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# VoIPcloud API (for click-to-call)
VOIPCLOUD_API_TOKEN=your_voipcloud_token
VOIPCLOUD_USER_NUMBER=your_voipcloud_number

# Stripe Configuration
# Set to 'test' or 'live' to control which payment links are used
# Default: 'test' for development, 'live' for production
VITE_STRIPE_MODE=test

# Stripe Publishable Keys (safe to expose in frontend)
# Get from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your_test_publishable_key
VITE_STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key

# LIVE MODE Payment Links (for reference - actual links are in PricingPublic.jsx)
VITE_STRIPE_LIVE_LITE_LINK=https://buy.stripe.com/your_live_lite_link
VITE_STRIPE_LIVE_STARTER_LINK=https://buy.stripe.com/your_live_starter_link
VITE_STRIPE_LIVE_PRO_LINK=https://buy.stripe.com/your_live_pro_link

# TEST MODE Payment Links (for reference - actual links are in PricingPublic.jsx)
VITE_STRIPE_TEST_LITE_LINK=https://buy.stripe.com/test_your_test_lite_link
VITE_STRIPE_TEST_STARTER_LINK=https://buy.stripe.com/test_your_test_starter_link
VITE_STRIPE_TEST_PRO_LINK=https://buy.stripe.com/test_your_test_pro_link

# Umami Analytics
# Get these from your Umami dashboard: https://cloud.umami.is or your self-hosted instance
VITE_UMAMI_SCRIPT_URL=https://cloud.umami.is/script.js
VITE_UMAMI_WEBSITE_ID=your_umami_website_id
